@using Bog.Client.Domain.Configuration
@using Microsoft.Extensions.Options
@inject IOptions<MenuConfiguration> MenuConfigurationOptions
@{
    var menuOptions = MenuConfigurationOptions.Value;
    var menuItems = menuOptions.MenuList;
}
<nav class="menu">
    @foreach (var menuItem in menuItems)
    {
        var menuLink = Url.Action("GetArticle", new
        {
            contentId = menuItem.Id,
            title = menuItem.Title?.Trim().Replace(' ', '-')
        });
        <span><a href="@menuLink">@menuItem.Title</a></span>
    }
</nav>